# Test Environment Configuration
# This file is used during automated testing

# Server Configuration
NODE_ENV=test
PORT=3001

# Database Configuration - TEST DATABASE
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restaurant_guide_test
DB_USER=postgres
DB_PASSWORD=postgres
DB_MAX_CONNECTIONS=5
DB_MIN_CONNECTIONS=1

# Redis Configuration - Separate DB for testing
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# JWT Configuration - Test secrets (NOT FOR PRODUCTION)
JWT_SECRET=test-jwt-secret-32-chars-long!!
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Logging - Less verbose for tests
LOG_LEVEL=error
LOG_FORMAT=json

# Cloudinary - Mock for most tests
CLOUDINARY_CLOUD_NAME=test-cloud
